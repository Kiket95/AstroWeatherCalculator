<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.patryk.astroweather1.Fragments.MoonFragment"
    android:background="@android:color/black"
    ><![CDATA[

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0">

    ]]>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/moonriseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/CivilTime"
                android:text="Wait..."
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Moonrise" />

            <TextView
                android:id="@+id/fullMoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/moonsetTime"
                android:layout_marginStart="8dp"
                android:layout_marginTop="48dp"
                android:text="Closest FullMoon:"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Moonset" />

            <TextView
                android:id="@+id/Moonset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/moonriseTime"
                android:layout_marginEnd="140dp"
                android:layout_marginStart="147dp"
                android:layout_marginTop="40dp"
                android:text="Moonset"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Moonrise" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:contentDescription="@drawable/sun"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/moon" />

            <TextView
                android:id="@+id/Longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/longitudeValue"
                android:layout_alignBottom="@+id/longitudeValue"
                android:layout_alignStart="@+id/Latitude"
                android:layout_marginStart="20dp"
                android:layout_marginTop="112dp"
                android:text="Longitude"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/newMoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/closestFullMoon"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:text="Closest NewMoon:"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fullMoon" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Time:"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toStartOf="@+id/moonsetTime"
                app:layout_constraintHorizontal_bias="0.162"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Moonset" />

            <TextView
                android:id="@+id/latitudeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/Latitude"
                android:layout_alignBottom="@+id/Latitude"
                android:layout_alignEnd="@+id/longitudeValue"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="84dp"
                android:text="Wait..."
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/closestNewMoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/fullMoon"
                android:layout_below="@+id/fullMoon"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                android:text="Wait..."
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/closestFullMoon" />

            <TextView
                android:id="@+id/Moonrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Moonrise"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                android:text="Time:"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toStartOf="@+id/moonriseTime"
                app:layout_constraintHorizontal_bias="0.162"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Moonrise" />

            <TextView
                android:id="@+id/moonPhase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:text="Moon Phase:"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newMoon" />

            <TextView
                android:id="@+id/closestFullMoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/fullMoon"
                android:layout_below="@+id/fullMoon"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                android:text="Wait..."
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/moonsetTime" />

            <TextView
                android:id="@+id/Latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_marginStart="20dp"
                android:layout_marginTop="84dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="Latitude:"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/longitudeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Latitude"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="112dp"
                android:layout_toEndOf="@+id/Longitude"
                android:text="Wait..."
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/moonsetTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/sunsetAzimuth"
                android:layout_alignBottom="@+id/sunsetAzimuth"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="32dp"
                android:text="Wait..."
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Moonset" />

            <TextView
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_toStartOf="@+id/latitudeValue"
                android:text="Wait..."
                android:textColor="@android:color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.642"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/synodDay"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="The day of the synod month:"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/moonPhase" />

            <TextView
                android:id="@+id/moonPhasePercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                android:text="Wait..."
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/closestNewMoon" />

            <TextView
                android:id="@+id/synodMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                android:text="Wait..."
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/moonPhasePercentage" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
